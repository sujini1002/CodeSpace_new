<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.cos.userinfo.dao.UserInfoInterface">
	<!-- 회원가입 -->
	<insert id="insertUserInfo"
		parameterType="com.team.cos.userinfo.vo.UserInfoVo">
		insert into
		userinfo(user_id,user_name,user_nickname,user_photo,user_url,user_intro,user_tag)
		values(#{user_id},#{user_name},#{user_nickname},#{user_photo},#{user_url},#{user_intro},#{user_tag});
	</insert>
	
	<!-- 회원가입 유무 확인 -->
	<select id="userInfoCheck"
		resultType="com.team.cos.userinfo.vo.UserInfoVo">
		select * from userinfo where user_id = #{user_id}
	</select>
	
	<!-- 로그인 한 시간 저장 -->
	<update id="userLoginUpdate"
		parameterType="com.team.cos.userinfo.vo.UserInfoVo">
		update userinfo set user_lastlogin = now() where
		user_id=#{user_id}
	</update>
	
	<!-- user_no로 사용자 정보 확인 -->
	<select id="userInfoWithNo" resultType="com.team.cos.userinfo.vo.UserInfoVo">
		select * from userinfo where user_no=#{user_no}
	</select>	
</mapper>