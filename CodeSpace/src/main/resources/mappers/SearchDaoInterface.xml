<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team.cos.search.dao.SearchDaoInterface">
	
	<!-- 메인 페이지 검색 쿼리 -->
	<select id="mainSearchList" resultType="com.team.cos.search.vo.searchQuestion">
		select * from question where q_content like CONCAT('%',#{content},'%')
	</select>
	
	<!-- 메인 페이지 검색 결과 Cnt 쿼리 -->
	<select id="mainSearchCnt" resultType="int">
		select count(*) from question where q_content like CONCAT('%',#{content},'%')
	</select>
	
	<!-- 유저 페이지 전체 유저 리스트 쿼리 -->
	<select id="userSearchList" resultType="com.team.cos.userinfo.vo.UserInfoVo">
		select * from userinfo
	</select>
	
	<!-- 유저 페이지 검색 결과  쿼리-->
	<select id="searchUsers" resultType="com.team.cos.userinfo.vo.UserInfoVo">
		select * from userinfo where user_nickname like CONCAT('%',#{words},'%')
	</select>

</mapper>